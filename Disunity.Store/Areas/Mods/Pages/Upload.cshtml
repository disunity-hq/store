@page
@model Disunity.Store.Areas.Mods.Pages.Upload
@addTagHelper *, Syncfusion.EJ2

@{
    var asyncSettings = new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl = "/mods/Upload" };
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken() 

<div>
    <h1>Upload a mod archive:</h1>
    <ejs-uploader
        id="ArchiveUpload"
        uploading="OnModUpload"
        asyncSettings="@asyncSettings"
        multiple="false"
        autoUpload="false">
    </ejs-uploader>
</div>
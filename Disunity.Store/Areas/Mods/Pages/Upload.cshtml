@page
@using Syncfusion.EJ2.Inputs
@model Disunity.Store.Areas.Mods.Pages.Upload
@addTagHelper *, Syncfusion.EJ2

@{
    var asyncSettings = new UploaderAsyncSettings {
        SaveUrl = "/api/v1/mods/upload"
    };
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<div>
    <h1>Upload a mod archive:</h1>
    <div id="uploader" style="margin: 50px;">
        <input type="file" id="ArchiveUpload" />
    </div>
    <div id="error-report"></div>
</div>


@section Scripts {
    SetupModUploadPage();
}
<!DOCTYPE html>
<html>

<partial name="_HeadPartial"/>

<body>
<div class="bg-image"></div>
<div id="wrapper">

    <partial name="_HeaderPartial"/>

    <div class="container" id="content">
        <div id="gutter">
            @if(ViewData["ShowBreadcrumbs"] is bool showBreadcrumbs && showBreadcrumbs) {
                <breadcrumb></breadcrumb>
            }
        </div>

        <div id="growler">
            <partial name="_CookieConsentPartial"/>
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <partial name="_FooterPartial"/>

</div>

<environment include="Development">
    <script src="~/main.bundle.js" asp-append-version="true"></script>
    @* <script src="~/vendor.bundle.js" asp-append-version="true"></script> *@
</environment>
<environment exclude="Development">
    <script src="~/main.bundle.min.js" asp-append-version="true"></script>
    @* <script src="~/vendor.bundle.min.js" asp-append-version="true"></script> *@
</environment>

<!-- Syncfusion Essential JS 2 Scripts -->
<script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

<ejs-scripts></ejs-scripts>

@RenderSection("Scripts", false)

</body>
</html>